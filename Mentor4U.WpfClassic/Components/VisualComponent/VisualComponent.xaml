<UserControl x:Class="Mentor4U.WpfClassic.Components.VisualComponent.VisualComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary Source="VisualComponentStyles.xaml"/>
    </UserControl.Resources>
    
    <StackPanel Orientation="Horizontal" Style="{StaticResource StyleCentreAlignment}">
        <Label x:Name="Label" Content="{Binding Picture}" 
               Style="{StaticResource StyleLabel}"/>
        <TextBlock x:Name="Box" Text="{Binding Text}"
                   TextWrapping="Wrap"
                   Style="{StaticResource StyleTextBlock}"/>
    </StackPanel>
</UserControl>
